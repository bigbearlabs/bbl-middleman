{
  "manifest_version": 2,
  "name":"mackerel-chrome"
  ,"version":"0.2"
  ,"description":"Does something awesome"
  ,"background": {
    // "page": "background.html",
    "scripts": [ "js/background.js" ]
  }
  ,"options_page":"options.html"
  ,"minimum_chrome_version":"16"
  ,"default_locale":"en"
  ,"permissions":[
    "tabs",
    "background",
    "webRequest", "webRequestBlocking", // to override x-frame-options from evernote oauth
    // "https://sandbox.evernote.com/*",
    "<all_urls>" // for screen captures
  ]
  ,"icons": {
    "16": "images/context menu icon.png"
    ,"19": "images/browser action icon.png"
    ,"48": "images/small app icon.png"
    ,"128":"images/big app icon.png"
  }
  ,"browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/small app icon.png"
  }
  ,"content_security_policy": "script-src 'self' http://localhost 'unsafe-eval'; object-src 'self'"


}